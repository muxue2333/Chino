@page
@model Chino.IdentityServer.Pages.Account.LoginModel
@inject IStringLocalizer<Chino.IdentityServer.Pages.Account.LoginModel> L

@{
    ViewContext.ClientValidationEnabled = true;
}

<div class="login-page">
    <div class="lead">
        <h1>@L["title_login"]</h1>
    </div>

    <div class="row">
        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h3>@L["login_by_account"]</h3>
                    </div>
                    <div class="card-body">
                        <form asp-route="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="LoginDto.ReturnUrl" />
                            <div class="form-group">
                                <label asp-for="LoginDto.Username"></label>
                                <input class="form-control" placeholder="Username" asp-for="LoginDto.Username" autofocus>
                                <span asp-validation-for="LoginDto.Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LoginDto.Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="LoginDto.Password" autocomplete="off">
                            </div>
                            @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="LoginDto.RememberLogin">
                                        <label class="form-check-label" asp-for="LoginDto.RememberLogin">
                                            @L["remember_login"]
                                        </label>
                                    </div>
                                </div>
                            }
                            <button class="btn btn-primary" name="button" value="login">@L["btn_login"]</button>
                            <button class="btn btn-secondary" name="button" value="cancel">@L["btn_cancel"]</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}